@model ModelLayer.ViewModels.CartViewModel

@{
    ViewData["Title"] = "DisplayCart";
}

<h1>DisplayCart</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>CartViewModel</h4>
    <hr />
    <dl class="row">
        @if (Model.guitar != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayFor(model => model.guitar)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.guitarQty)
            </dd>
        }
        @if (Model.strings != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayFor(model => model.strings)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.stringsQty)
            </dd>
        }
        @if (Model.Case != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayFor(model => model.Case)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CaseQty)
            </dd>
        }
        @if (Model.amplifier != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayFor(model => model.amplifier)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.amplifierQty)
            </dd>
        }

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.totalPrice)
        </dt>
        <dd class="col-sm-10">
             @{string num = string.Format("{0:0.00}", Model.totalPrice);} @num
        </dd>
    </dl>

    <form asp-action="PlaceOrder">
        <input type="submit" value="Place Order" class="btn btn-danger" /> |
    </form>
    <a asp-controller="StoreLocation" asp-action="ContinueShopping">Continue Shopping</a>
    <a asp-controller="StoreLocation" asp-action="LogOut">Log out</a>
    @*<span><a asp-controller="StoreLocation" asp-action="Choice" asp-route-LocationAbreviation="Dana Point">Dana Point</a></span>*@
</div>
